@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3></h3>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


    <div class="kt-grid__item kt-grid__item--fluid kt-app__content">
        <div class="row">
            <div class="col-xl-12">
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">@ViewData["Title"]</h3>
                        </div>
                    </div>
                  
                        <div class="kt-portlet__body">
                            <div class="kt-section kt-section--first">
                                <div class="kt-section__body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                                            <p>
                                                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                                            </p>
                                        
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-3 col-xl-3">
                                    </div>
                                    <div class="col-lg-9 col-xl-9">
                                        <form id="download-data" asp-page="DownloadPersonalData" method="post">
                                            <button type="submit" class="btn btn-success mb-1">Download</button>
                                        </form>

                                        <p>
                                            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>