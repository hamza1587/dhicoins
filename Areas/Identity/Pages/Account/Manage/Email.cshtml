@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    //ViewData["ActivePage"] = ManageNavPages.Email;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<section class="content">
    <div class="container-fluid">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="email-form" method="post">
            <div class="row">
                <div class="col-md-3 offset-1">
                    <div class="card">
                        <br />
                        <div class="card-body">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
                                <li class="nav-item"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
                                <li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>

                            </ul>
                        </div>

                    </div>

                </div>

                <div class="col-md-6">
                    <div class="card">
                        <h5 class="mt-4 ml-5">Manage Email</h5>
                        <hr />
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @if (Model.IsEmailConfirmed)
                            {
                                <div class="form-group row">
                                    <label for="inputName2" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" class="form-control" readonly />
                                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="form-group row">
                                    <label for="inputName2" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" class="form-control" readonly />
                                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                                    </div>
                                </div>

                            }
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-10">
                                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-20 btn btn-primary">Change email</button>


                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



