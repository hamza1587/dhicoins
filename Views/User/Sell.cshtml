@section Scripts{

    <script>

        $("#saveData").click(function () {
            const url = "/User/SellCoin";
            const btcAmount = BtAmount;
            const targetAmount = mvrAmount;
            const targetCurrency = $("#targetCurrency").val();
            const Remarks = $("#Remarks").val();
            const Chaincheck = $("[name=CurrenyChain]:checked").val();
            let hasError = false;

            // Clear any previous error messages
            $("#RemarkError").text("");
            $("#ChainError").text("");

            // Check if the Remarks field is empty
            if (Remarks.trim() === "") {
                $("#RemarkError").text("Please fill in the Remarks field.");
                hasError = true;
            }

            // Check if the Currency Chain is not selected
            if (!Chaincheck) {
                $("#ChainError").text("Please select a Currency Chain.");
                hasError = true;
            }

            // Get the selected tab and value
            const activeTab = $(".tab-pane.active");
            const tabValue = activeTab.find("select[name='CurrencyTakeFrom']").val();

            // Check if the tab value is empty
            if (!tabValue) {
                $("#error-message-option").text("Please select an option.");
                hasError = true;
            }

            // Check if there are any errors, and stop execution if there are
            if (hasError) {
                return;
            }

            // Otherwise, submit the form data using AJAX
            $.ajax({
                url: url,
                method: "POST",
                dataType: "json",
                data: {
                    btcAmount: btcAmount,
                    MvrAmount: targetAmount,
                    CurrencyTakeFrom: tabValue,
                    SelectCurrency: targetCurrency,
                    SellRemarks: Remarks,
                    CurrenyChain: Chaincheck,
                },
                success: function (r) {
                    location.reload();
                },
                error: function (e) {
                    alert(e);
                }
            });
        });        document.getElementById('targetCurrency').addEventListener('change', function () {
            onbtcChange();
        });
        var input = document.getElementById("targetAmount");

        input.addEventListener('input', function () {
     
                onbtcChange();
        });

        var BtAmount;
        var mvrAmount;
        function onbtcChange() {
            var currency = document.getElementById('targetAmount').value;
            
            const targetCurrency = document.getElementById('targetCurrency').value.toLowerCase();     
            $.ajax({
                url: '/User/Sellreverseconversion',
                type: 'POST',
                data: {
                    currency: currency,
                    selectTargetAmount: targetCurrency,
                },
                success: function (response) {                                  
                    if (response.success === true) {
                        var btcAmount = response.currency;
                        console.log(response);

                        var imageSrc = response.image;
                        BtAmount = response.currency;
                        TargetCrrency = response.selectTargetAmount;

                        var errorContainer = document.getElementById("error");
                        errorContainer.textContent = "";

                        document.getElementById('Image2').src = imageSrc;
                        document.getElementById("lblReeiveAddress").innerText = response.reciveAdress;   

                        $("#YourAmount").text(`${response.currency} ${response.selectTargetAmount}`);

                        document.getElementById("currencyInput").value = response.roundValue;

                        MvrCurrency = response.roundValue;
                        document.getElementById('currencyInputError').textContent = ``;
                        document.getElementById('currencyInput').setCustomValidity(``);
                        document.getElementById("MVR").textContent = response.roundValue;
                        var chainList = response.getChainList;

                        // Get the parent element for the radio buttons
                        var radioParent = document.querySelector('.kt-radio-inline');                    

                        // Remove any existing radio buttons
                        while (radioParent.firstChild) {
                            radioParent.removeChild(radioParent.firstChild);
                        }
                        for (var i = 0; i < chainList.length; i++) {
                            var label = document.createElement('label');
                            label.className = 'kt-radio kt-radio--brand';
                            var radio = document.createElement('input');
                            radio.type = 'radio';
                            radio.name = 'CurrenyChain';
                            radio.value = chainList[i];
                            radio.className = 'rd-chain';
                            var span = document.createElement('span');
                            label.appendChild(radio);
                            label.appendChild(span);
                            label.appendChild(document.createTextNode(chainList[i]));
                            radioParent.appendChild(label);

                        }
                        let rdChain = document.getElementsByClassName("rd-chain");

                        for (let i = 0; i < rdChain.length; i++) {
                            rdChain[i].addEventListener('change', function () {
                                var chian = this.value;
                                const targetCurrency = document.getElementById('targetCurrency').value.toLowerCase();
                                $.ajax({
                                    url: '/User/SellChainConversion',
                                    type: 'POST',
                                    data: {
                                        currency: btcAmount,
                                        selectTargetAmount: targetCurrency,
                                        selectChain: chian,
                                    },
                                    success: function (response) {
                                        console.log(response)
                                        var imageSrc = response.image;
                                        document.getElementById('Image2').src = imageSrc;
                                        document.getElementById("lblReeiveAddress").innerText = response.getRecervicerAdress;
                                        document.getElementById("MVR").textContent = response.roundValue;
                                        mvrAmount = response.roundValue;
                                    },
                                    error: function (e) {
                                        alert(e);
                                    }
                                })

                            })
                        }
                    }

                    else if (response.success === false) {
                        const minAmount = response.d[0];
                        const maxAmount = response.d[1];

                        document.getElementById('currencyInputError').textContent = `Our Buy and Sell Limit is between ${minAmount} and ${maxAmount}.Your enter curreny is not between.`;
                        document.getElementById('currencyInput').setCustomValidity(`Our Buy and Sell Limit is between ${minAmount} and ${maxAmount}.Your enter curreny is not between.`);
                        document.getElementById("currencyInput").value = '';
                    }
                },
                error: function (error) {
                    console.log('Error:', error);
                }
            });

         
        }
        document.getElementById('currencyInput').addEventListener('input', function () {
            MVRChange();
        });

        function MVRChange() {
            var btcAmount = document.getElementById("currencyInput").value;
            var targetcurreny = document.getElementById("targetCurrency").value;

            $.ajax({
                url: '/User/GetSellConversionRateReserse',
                type: 'POST',
                data: {
                    currency: btcAmount,
                    selectTargetAmount: targetcurreny,
                },
                success: function (response) {                
                    document.getElementById("targetAmount").value = response.amtinbtc;
                    var chainList = response.getChainList;
                    console.log(chainList);
                    // Get the parent element for the radio buttons
                    var radioParent = document.querySelector('.kt-radio-inline');

                    // Remove any existing radio buttons
                    while (radioParent.firstChild) {
                        radioParent.removeChild(radioParent.firstChild);
                    }
                    for (var i = 0; i < chainList.length; i++) {
                        var label = document.createElement('label');
                        label.className = 'kt-radio kt-radio--brand';
                        var radio = document.createElement('input');
                        radio.type = 'radio';
                        radio.name = 'CurrenyChain';
                        radio.value = chainList[i];
                        radio.className = 'rd-chain';
                        var span = document.createElement('span');
                        label.appendChild(radio);
                        label.appendChild(span);
                        label.appendChild(document.createTextNode(chainList[i]));
                        radioParent.appendChild(label);

                    }

                   
                },
                error: function (error) {
                    console.log('Error:', error);
                }

            });
        }

        function CopytoText(button) {
            var code = document.getElementById("lblReeiveAddress").textContent; // Use textContent to get the text value
            var textarea = document.createElement("textarea");
            textarea.value = code;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand("copy");
            document.body.removeChild(textarea);

            button.innerHTML = "Copied";
            button.style.backgroundColor = "green"; // Change button color to green
            setTimeout(function () {
                button.innerHTML = '<span class="tooltiptext" id="myTooltip">Copy</span>';
                button.style.backgroundColor = ""; // Revert button color to default
            }, 3000); // Change back after 3 seconds (adjust as needed)
        }




        function startTimer() {
            var timeLeft = 600; // 60 seconds = 1 minute , 600 seconds = 10 minutes
            var timer = document.getElementById('timer');

            var countdown = setInterval(function () {
                timeLeft--;
                var minutes = Math.floor(timeLeft / 60);
                var seconds = timeLeft % 60;

                minutes = (minutes < 10) ? '0' + minutes : minutes;
                seconds = (seconds < 10) ? '0' + seconds : seconds;

                timer.innerHTML = minutes + ':' + seconds;

                if (timeLeft == 0) {
                    clearInterval(countdown);
                    location.reload(); // refresh the page
                }
            }, 1000);
        }

      
    </script>
    <script>
        $(document).ready(function () {
            $("#sell-select-1").click(function () {
                var targetAmount = $("#targetamount");
                var currencyInput = $("#currencyInput");
                var errorContainer = $("#error");

                if (targetAmount.val() === '' || currencyInput.val() === '') {
                    errorContainer.text('Please fill in the input fields');
                } else {
                    errorContainer.text(''); // Clear the error message
                    $("#Buy-Portlet-1").css("display", "none");
                    $("#Buy-Portlet-2").css("display", "block");
                }
            });

            var selectedOptionExchange = null;
            var selectedOptionPerson = null;
            var checkboxChecked = false;

            // Make sure the Exchange tab is active by default
            $(".nav-link[href='#kt_tabs_5_1']").removeClass("active");
            $(".nav-link[href='#kt_tabs_5_2']").addClass("active");
            $("#kt_tabs_5_1").removeClass("show active");
            $("#kt_tabs_5_2").addClass("show active");

            $(".nav-link").click(function (e) {
                e.preventDefault();

                if ($(this).hasClass("disabled")) {
                    return;
                }

                $(".nav-link").removeClass("active");
                $(this).addClass("active");

                $(".tab-pane").removeClass("show active");
                $($(this).attr("href")).addClass("show active");

                $("#error-message-option").hide();
                $("#error-message-checkbox").hide();

                if ($(this).attr("href") === "#kt_tabs_5_1") {
                    selectedOptionExchange = $("#kt_tabs_5_1 select[name='CurrencyTakeFrom']").val();
                } else {
                    selectedOptionPerson = $("#kt_tabs_5_2 select[name='CurrencyTakeFrom']").val();
                }
            });

            $("select[name='CurrencyTakeFrom']").change(function () {
                if ($(this).parents(".tab-pane").attr("id") === "kt_tabs_5_1") {
                    selectedOptionExchange = $(this).val();
                } else {
                    selectedOptionPerson = $(this).val();
                }
            });

            $("input[type='checkbox']").change(function () {
                checkboxChecked = $(this).is(":checked");
            });

            $("#sell-select-2").click(function () {
                var activeTab = $(".nav-link.active").attr("href");
                var selectedOption = activeTab === "#kt_tabs_5_1" ? selectedOptionExchange : selectedOptionPerson;

                if (!selectedOption || selectedOption === "Choose") {
                    $("#error-message-option").text("Please select an option.");
                    $("#error-message-option").show();
                } else {
                    $("#error-message-option").hide();
                }

                if (!checkboxChecked) {
                    $("#error-message-checkbox").text("Please confirm it you are the owner of this Coin");
                    $("#error-message-checkbox").show();
                } else {
                    $("#error-message-checkbox").hide();
                }

                if (selectedOption && selectedOption !== "Choose" && checkboxChecked) {
                    $("#Buy-Portlet-2").css("display", "none");
                    $("#Buy-Portlet-3").css("display", "block");
                }
            });
        });

    </script>
